<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <rotate
      android:fromDegrees="-90"
      android:toDegrees="-90">
      <shape android:shape="oval">
        <gradient
          android:width="@dimen/item_color_picker_height"
          android:centerX="-1"
          android:endColor="@color/last_dance_primary_color"
          android:startColor="@color/last_dance_secondary_color"
          android:type="sweep" />
        <size
          android:width="@dimen/item_color_picker_height"
          android:height="@dimen/item_color_picker_height" />
      </shape>
    </rotate>
  </item>
</layer-list>
